############### scripts ###############
count_files() {
    local dir=${1:-.}
    find "$dir" -type d -exec sh -c '
        count=$(find "{}" -maxdepth 1 -type f | wc -l)
        [ "$count" -gt 0 ] && echo "{}: $count"
    ' \;
}
count_dirs() {
    local dir=${1:-.}
    find "$dir" -type d -exec sh -c '
        count=$(find "{}" -mindepth 1 -maxdepth 1 -type d | wc -l)
        [ "$count" -gt 0 ] && echo "{}: $count"
    ' \;
}
# watch log from nrun
wlog(){
    tail -f -n `wc -l $1` \;
};

